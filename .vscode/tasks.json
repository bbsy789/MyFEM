                "-Wall",
                "-std=c++17",
                "${file}",
                "${workspaceFolder}\\src\\matrix.cpp",
                "${workspaceFolder}\\src\\common.cpp",
                "${workspaceFolder}\\src\\pre.cpp",
                "${workspaceFolder}\\src\\point.cpp",
